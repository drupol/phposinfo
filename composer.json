{
    "name": "drupol/phposinfo",
    "type": "library",
    "description": "Try to guess the host operating system.",
    "keywords": [
        "operating system detection"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.4"
    },
    "require-dev": {
        "drupol/php-conventions": "^3.0.2",
        "friends-of-phpspec/phpspec-code-coverage": "^5",
        "infection/infection": "^0.13.6 || ^0.15.0",
        "phpspec/phpspec": "^7"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "drupol\\phposinfo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "drupol\\phposinfo\\tests\\": "tests/src/"
        }
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run",
        "infection": "./vendor/bin/infection run"
    }
}
